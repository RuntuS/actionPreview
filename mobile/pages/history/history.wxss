
/* 头部信息框样式 */
.head{
  height: 300rpx;
  background-color: white;
  display: flex;
  align-items: center;
  justify-content: center;
}

.content-box{
  width: 90%;
  height: 80%;
  background-image: url("https://lao-lan-go.oss-cn-beijing.aliyuncs.com/%E6%B4%BB%E5%8A%A8%E9%A2%84%E7%BA%A6%E5%B0%8F%E7%A8%8B%E5%BA%8F%E4%B8%93%E5%B1%9E/521648532C5E5F133243D3345CCE55F8.jpg");
  background-size: 400px 300px;
  background-position: 50% 50%;
  border-radius: 20rpx;
  box-shadow: 1px 1px 5px #4297FF;
  display: flex;
  align-items: center;
}

.img-box{
  width: 100rpx;
  height: 100rpx;
  margin-left: 50rpx;
}

.img-box > image{
  width: 100%;
  height: 100%;
  border-radius: 50rpx;
}

.self-intro{
  margin-left: 30rpx;
  height: 80rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

/* 预约信息 */
.history-inf{
  min-height: 400rpx;
  background-color: white;
  margin-top: 100rpx;
}